@page "/categories"
@layout MainLayout
@inject InventoryManagementBlazorClient.Services.CategoryService categoryService
@inject NavigationManager NavigationManager
@using InventoryManagementBlazorClient.Models

<h3>Categories List</h3>

<style>
    .category-name {
        max-width: 100px; /* Adjust the max-width as needed */
    }

    .product-count {
        max-width: 30px; /* Adjust the max-width as needed */
    }

    .text-center {
        text-align: center;
    }
</style>

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
else if (categories != null && categories.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="category-name">Category Name</th>
                <th scope="col" class="product-count text-center">Number of Products</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr @onclick="@(() => NavigateToCategoryDetail(category.CategoryId))">
                    <td class="category-name">@category.Name</td>
                    <td class="product-count text-center">@category.Products?.Count</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No categories found.</div>
}

@code {
    private List<Category>? categories;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            categories = await categoryService.GetCategoriesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load categories: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCategoryDetail(int categoryId)
    {
        NavigationManager.NavigateTo($"/category-detail/{categoryId}");
    }
}
